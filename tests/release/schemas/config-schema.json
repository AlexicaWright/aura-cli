{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "VERSION": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "AUTH": {
      "type": "object",
      "properties": {
        "CREDENTIALS": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "CLIENT_ID": {
                "type": "string"
              },
              "CLIENT_SECRET": {
                "type": "string"
              }
            },
            "required": ["CLIENT_ID", "CLIENT_SECRET"]
          }
        },
        "ACTIVE": {
          "type": "string"
        }
      },
      "required": ["CREDENTIALS", "ACTIVE"]
    },
    "OPTIONS": {
      "type": "object"
    }
  },
  "required": ["VERSION", "AUTH", "OPTIONS"]
}
